{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Subscribers per YouTube Channel by Country (2022)",
  "width": 450,
  "height": 250,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "./ne_110m.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "data": {
        "url": "./ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "none"
      }
    },
    {
      "data": {
        "url": "./oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "./ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "./youtube_filtered.csv"
            },
            "key": "Country",
            "fields": [
              "subscribers", "Channel_count"
            ]
          }
        },
        {
          "calculate": "datum.subscribers/datum.Channel_count",
          "as": "Subscribers per Youtuber"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Subscribers per Youtuber",
          "type": "quantitative",
          "title": "Avg Subscribers per Channel",
          "scale": {
            "scheme": "reds"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Channel_count",
            "type": "quantitative",
            "title": "YouTube Channel Count",
            "format": ",d"
          },
          {
            "field": "subscribers",
            "type": "quantitative",
            "title": "Total Subscribers",
            "format": ",d"
          },
          {
            "field": "Subscribers per Youtuber",
            "type": "quantitative",  
            "title": "Avg Subscribers per Channel",
            "format": ",d"
          }
        ]
      }
    },
    {
      "data": {
        "url": "../youtube_filtered.csv"
      },
      "mark": {
        "type": "text",
        "dx": -25,
        "fontSize": 13,
        "baseline": "middle",
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "longitude": {"field": "Longitude"}, 
        "latitude": {"field": "Latitude"}, 
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Cuba' || datum['Country'] == 'Venezuela' || datum['Country'] == 'Chile' || datum['Country'] == 'Japan'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}